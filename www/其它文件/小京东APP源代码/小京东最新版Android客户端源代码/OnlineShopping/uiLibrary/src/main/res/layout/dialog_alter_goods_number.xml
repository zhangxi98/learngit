<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="修改购买数量"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/number_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/goods_num_sub" />

            <EditText
                android:id="@+id/goods_number"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:editable="true"
                android:gravity="center"
                android:inputType="number"
                android:text="2" />

            <ImageButton
                android:id="@+id/number_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/goods_num_add" />
        </TableRow>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="10dp"
            android:background="@android:color/darker_gray" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/alter_cancel"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_bg"
                android:text="取消" />


            <Button
                android:id="@+id/alter_confirm"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/button_bg"
                android:text="确定" />
        </TableRow>
    </LinearLayout>

</RelativeLayout>