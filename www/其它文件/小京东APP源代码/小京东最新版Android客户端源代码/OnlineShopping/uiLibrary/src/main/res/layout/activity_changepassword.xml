<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/center_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                style="@style/register_text_style"
                android:text="用户名：" />

            <EditText
                android:id="@+id/editUserName"
                style="@style/register_edit_style"
                android:hint="请输入您的用户名" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:background="#f2f2f2" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                style="@style/register_text_style"
                android:text="旧密码：" />

            <EditText
                android:id="@+id/editOldPassword"
                style="@style/register_edit_style"
                android:hint="请输入您现在的密码"
                android:inputType="textPassword" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:background="#f2f2f2" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                style="@style/register_text_style"
                android:text="新密码：" />

            <EditText
                android:id="@+id/editNewPassword"
                style="@style/register_edit_style"
                android:hint="请输入您的新密码"
                android:inputType="textPassword" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:background="#f2f2f2" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                style="@style/register_text_style"
                android:text="确认密码：" />

            <EditText
                android:id="@+id/editAgain"
                style="@style/register_edit_style"
                android:hint="请确认您的新密码"
                android:inputType="textPassword" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/btnSure"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:background="@drawable/login_off_bg"
        android:textColor="#999999"
        android:text="确定"
        android:textSize="@dimen/activity_horizontal_margin" />
</LinearLayout>